@model Category

@{
    string action = ViewBag.Action ?? string.Empty;
}


<form method="post" asp-controller="categories" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="CategoryId" />
    }
    @* <div class="text-danger" asp-validation-summary="All"></div> *@
    <div class="form-floating">
        <input type="text" asp-for="Name" class="form-control" placeholder="Name" />
        <label asp-for="Name"></label>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-floating mt-3">
        <input type="text" asp-for="Description" class="form-control" placeholder="Description" />
        <label asp-for="Description"></label>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>



